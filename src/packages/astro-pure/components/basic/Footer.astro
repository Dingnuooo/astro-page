---
import config from 'virtual:config'

import { Icon } from '../user'

const footerConf = config.footer
let social = footerConf.social || {}

// If the list does not contain rss, add it.
// Comment out this section of code to hide the RSS button
// social.rss = {
//   label: 'RSS',
//   url: '/rss.xml'
// }

const footerLink1 = footerConf.links?.filter(({ pos }) => pos === 1) || []
---
<!-- <script src="//api.busuanzi.cc/static/3.6.9/busuanzi.min.js" defer></script> -->
<script>document.addEventListener("DOMContentLoaded",function(){const e=document.getElementById("busuanzi_value_site_uv"),t=document.getElementById("busuanzi_value_site_pv"),n=new MutationObserver(e=>{for(let t of e)if("childList"===t.type){n.disconnect(),t.target.innerHTML=parseInt(t.target.innerHTML)+350;break}}),i=new MutationObserver(e=>{for(let t of e)if("childList"===t.type){i.disconnect(),t.target.innerHTML=parseInt(t.target.innerHTML)+700;break}}),r={childList:!0};n.observe(e,r),i.observe(t,r)});</script>

<footer class='mx-auto mb-5 mt-16 w-full'>
  <div class='border-t pt-3'>
    <div class='flex items-center gap-y-3 max-sm:flex-col sm:justify-between sm:gap-y-0'>
      <div
        class='flex items-center gap-x-4 gap-y-2 text-muted-foreground max-sm:flex-col [&_a]:text-foreground text-sm'
      >
        {/* year & author */}
        <div>
          {config.footer.year}
          {config.author}
          {
            footerConf.links && footerConf.links.length > 0 && (
              <>
                <span>
                  {footerConf.links
                    .filter(({ pos }) => pos === 2)
                    .map(({ title, link, style }) => (
                      <span>
                        <a href={link} target='_blank' class={style}>
                          {title}
                        </a>
                      </span>
                    ))}
                </span>
              </>
            )
          }
        </div>
        {/* Powered by */}
        {
          footerConf.credits && (
            <span>
              Powered by
              <a href='https://github.com/withastro/astro' target='_blank'>
                Astro
              </a>
              &
              Theme.<a href='https://github.com/cworld1/astro-theme-pure' target='_blank' rel="noopener noreferrer">Pure</a>
            </span>
          )
        }
        {/* View count */}
        {
          <div class="text-muted-foreground text-sm">
            Total visits
            <span id="busuanzi_site_pv">加载中...</span>
          </div>
        }
        {/* ICP */}
        {
          footerLink1.length > 0 && (
            <div>
              {footerLink1.map(({ title, link, style }, index) => (
                <span>
                  <a href={link} target='_blank' class={style}>
                    {title}
                  </a>
                  {index < footerLink1.length - 1 && ' • '}
                </span>
              ))}
            </div>
          )
        }
        
        
      </div>

      {/* Social Brands */}
      <div class='flex items-center gap-x-4'>
        {
          footerConf.social &&
            Object.entries(footerConf.social).map(([platform, { label, url }]) => (
              <a
                class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
                href={url}
                aria-label={label}
                target='_blank'
                rel='noopener noreferrer'
              >
                <Icon name={platform as keyof typeof footerConf.social} />
              </a>
            ))
        }
      </div>
    </div>
  </div>
</footer>
